    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 이미지 로드 실패 처리 함수
        function handleImageError(img) {
            console.error('이미지를 로드할 수 없습니다: ', img.src);
            
            // 대체 요소 생성
            const fallbackDiv = document.createElement('div');
            fallbackDiv.className = 'img-fallback';
            fallbackDiv.innerHTML = '<i class="bi bi-image"></i><div>이미지를 불러올 수 없습니다</div>';
            
            // 이미지 뒤에 대체 요소 삽입
            img.parentNode.insertBefore(fallbackDiv, img.nextSibling);
            
            // 이미지 숨기기
            img.style.display = 'none';
        }

        // 메뉴 토글 기능
        document.getElementById('menuToggle').addEventListener('click', function() {
            document.getElementById('fullMenu').classList.add('open');
        });
        
        document.getElementById('closeMenu').addEventListener('click', function() {
            document.getElementById('fullMenu').classList.remove('open');
        });
        
        // 네비게이션 메뉴 클릭 시 섹션 전환
        document.querySelectorAll('.nav-item a, .footer-links a').forEach(item => {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                
                if (this.getAttribute('data-section')) {
                    // 활성화 클래스 변경
                    document.querySelectorAll('.nav-item a').forEach(link => {
                        link.classList.remove('active');
                    });
                    
                    // 모든 섹션 숨기기
                    document.querySelectorAll('.content-section').forEach(section => {
                        section.classList.remove('active');
                    });
                    
                    // 해당 섹션 표시
                    const sectionId = this.getAttribute('data-section') + '-section';
                    document.getElementById(sectionId).classList.add('active');
                    
                    // 전체 메뉴 닫기
                    document.getElementById('fullMenu').classList.remove('open');
                    
                    // 현재 활성화된 메뉴 표시
                    const currentNavItem = document.querySelector(`.nav-item a[data-section="${this.getAttribute('data-section')}"]`);
                    if (currentNavItem) {
                        currentNavItem.classList.add('active');
                    }

                    // 페이지 상단으로 스크롤
                    window.scrollTo(0, 0);
                }
            });
        });

        // 이미지 슬라이더 기능
        const slides = document.querySelector('.slides');
        const slideElements = document.querySelectorAll('.slide');
        const prevBtn = document.querySelector('.prev-btn');
        const nextBtn = document.querySelector('.next-btn');
        const dotsContainer = document.getElementById('slider-dots');
        let currentIndex = 0;
        let slideInterval;

        // 점(dot) 만들기
        slideElements.forEach((_, i) => {
            const dot = document.createElement('span');
            dot.classList.add('dot');
            if (i === 0) dot.classList.add('active');
            dot.addEventListener('click', () => moveToSlide(i));
            dotsContainer.appendChild(dot);
        });

        const dots = document.querySelectorAll('.dot');

        function updateSlide() {
            slides.style.transform = `translateX(${-currentIndex * 100}%)`;
            dots.forEach(dot => dot.classList.remove('active'));
            dots[currentIndex].classList.add('active');
        }

        function moveToSlide(index) {
            currentIndex = index;
            updateSlide();
            resetInterval();
        }

        function nextSlide() {
            currentIndex = (currentIndex < slideElements.length - 1) ? currentIndex + 1 : 0;
            updateSlide();
        }

        function prevSlide() {
            currentIndex = (currentIndex > 0) ? currentIndex - 1 : slideElements.length - 1;
            updateSlide();
        }

        function resetInterval() {
            clearInterval(slideInterval);
            slideInterval = setInterval(nextSlide, 5000);
        }

        prevBtn.addEventListener('click', () => {
            prevSlide();
            resetInterval();
        });

        nextBtn.addEventListener('click', () => {
            nextSlide();
            resetInterval();
        });

        // 자동 슬라이드 (5초마다 이동)
        slideInterval = setInterval(nextSlide, 5000);

        // 키보드 화살표로 슬라이드 이동
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft') {
                prevSlide();
                resetInterval();
            } else if (e.key === 'ArrowRight') {
                nextSlide();
                resetInterval();
            }
        });

        // 초기화
        updateSlide();

        // 연도별 탭 기능
        const yearTabs = document.querySelectorAll('.year-tab');
        const yearContents = document.querySelectorAll('.year-content');

        yearTabs.forEach((tab) => {
            tab.addEventListener('click', () => {
                // 모든 탭 버튼 & 콘텐츠 초기화
                yearTabs.forEach(t => t.classList.remove('active'));
                yearContents.forEach(c => c.classList.remove('active'));

                // 클릭한 버튼 활성화
                tab.classList.add('active');
                document.getElementById(tab.dataset.year).classList.add('active');
            });
        });

        // 게임 탭 전환 기능
        const gameTabs = document.querySelectorAll('.game-tab');
        const gameContents = document.querySelectorAll('.game-content');

        gameTabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const gameId = tab.getAttribute('data-game');
                
                // 모든 탭과 콘텐츠 비활성화
                gameTabs.forEach(t => t.classList.remove('active'));
                gameContents.forEach(c => c.classList.remove('active'));
                
                // 선택한 탭과 콘텐츠 활성화
                tab.classList.add('active');
                document.getElementById(`${gameId}-game`).classList.add('active');
            });
        });

        // 사다리타기 게임 기능
        document.getElementById('add-participant').addEventListener('click', () => {
            const newInput = document.createElement('div');
            newInput.className = 'input-group mt-2';
            newInput.innerHTML = `
                <input type="text" class="form-control participant-input" placeholder="참가자 이름">
                <button class="btn btn-outline-danger remove-btn">삭제</button>
            `;
            document.getElementById('participants-list').appendChild(newInput);
            addRemoveListeners();
        });

        document.getElementById('add-result').addEventListener('click', () => {
            const newInput = document.createElement('div');
            newInput.className = 'input-group mt-2';
            newInput.innerHTML = `
                <input type="text" class="form-control result-input" placeholder="결과">
                <button class="btn btn-outline-danger remove-btn">삭제</button>
            `;
            document.getElementById('results-list').appendChild(newInput);
            addRemoveListeners();
        });

        function addRemoveListeners() {
            document.querySelectorAll('.remove-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    if (this.parentElement.parentElement.childElementCount > 1) {
                        this.parentElement.remove();
                    }
                });
            });
        }

        // 초기 삭제 버튼 리스너 추가
        addRemoveListeners();

        document.getElementById('draw-ladder').addEventListener('click', drawLadder);
        document.getElementById('start-ladder').addEventListener('click', startLadder);

        function drawLadder() {
            const participants = Array.from(document.querySelectorAll('.participant-input')).map(input => input.value.trim()).filter(Boolean);
            const results = Array.from(document.querySelectorAll('.result-input')).map(input => input.value.trim()).filter(Boolean);
            
            if (participants.length === 0 || results.length === 0) {
                alert('참가자와 결과를 최소 한 개 이상 입력해주세요.');
                return;
            }
            
            if (participants.length !== results.length) {
                alert('참가자와 결과의 개수가 같아야 합니다.');
                return;
            }
            
            // 참가자와 결과 표시
            const participantsEl = document.getElementById('ladder-participants');
            const resultsEl = document.getElementById('ladder-results');
            
            participantsEl.innerHTML = '';
            resultsEl.innerHTML = '';
            
            participants.forEach(participant => {
                const div = document.createElement('div');
                div.className = 'participant';
                div.textContent = participant;
                participantsEl.appendChild(div);
            });
            
            results.forEach(result => {
                const div = document.createElement('div');
                div.className = 'result';
                div.textContent = result;
                resultsEl.appendChild(div);
            });
            
            // 사다리 라인 그리기
            drawLadderLines(participants.length);
        }

        function drawLadderLines(count) {
            const linesEl = document.getElementById('ladder-lines');
            linesEl.innerHTML = '';
            
            const containerWidth = document.querySelector('.ladder').offsetWidth;
            const participantWidth = 100; // 참가자 요소의 너비
            const spacing = (containerWidth - participantWidth * 2) / (count - 1);
            
            // 수직선 그리기
            for (let i = 0; i < count; i++) {
                const x = participantWidth + i * spacing;
                const line = document.createElement('div');
                line.className = 'vertical-line';
                line.style.left = `${x}px`;
                linesEl.appendChild(line);
            }
            
            // 수평선 그리기 (랜덤 위치에)
            const horizontalLineCount = count * 2;
            const lineHeight = 300; // 사다리 높이
            
            for (let i = 0; i < horizontalLineCount; i++) {
                const y = Math.random() * (lineHeight - 50) + 25; // 25에서 275 사이
                const lineIndex = Math.floor(Math.random() * (count - 1));
                
                const x1 = participantWidth + lineIndex * spacing;
                const x2 = participantWidth + (lineIndex + 1) * spacing;
                
                const line = document.createElement('div');
                line.className = 'horizontal-line';
                line.style.top = `${y}px`;
                line.style.left = `${x1}px`;
                line.style.width = `${x2 - x1}px`;
                linesEl.appendChild(line);
            }
        }

        function startLadder() {
            const participants = Array.from(document.querySelectorAll('.participant-input')).map(input => input.value.trim()).filter(Boolean);
            const results = Array.from(document.querySelectorAll('.result-input')).map(input => input.value.trim()).filter(Boolean);
            
            if (participants.length === 0 || results.length === 0) {
                alert('먼저 사다리를 그려주세요.');
                return;
            }
            
            // 결과 계산 (간단한 랜덤 매칭)
            const shuffledResults = [...results].sort(() => Math.random() - 0.5);
            const resultMap = {};
            
            participants.forEach((participant, index) => {
                resultMap[participant] = shuffledResults[index];
            });
            
            // 결과 표시
            const resultEl = document.getElementById('ladder-result');
            resultEl.innerHTML = '<ul class="list-group"></ul>';
            
            const listEl = resultEl.querySelector('ul');
            for (const [participant, result] of Object.entries(resultMap)) {
                const li = document.createElement('li');
                li.className = 'list-group-item';
                li.innerHTML = `<strong>${participant}</strong> → ${result}`;
                listEl.appendChild(li);
            }
        }

        // 돌림판 게임 기능
        document.getElementById('add-wheel-item').addEventListener('click', () => {
            const newInput = document.createElement('div');
            newInput.className = 'input-group mb-2';
            newInput.innerHTML = `
                <input type="text" class="form-control wheel-item-input" placeholder="항목">
                <input type="color" class="form-control form-control-color wheel-color-input" value="${getRandomColor()}">
                <button class="btn btn-outline-danger remove-btn">삭제</button>
            `;
            document.getElementById('wheel-items-list').appendChild(newInput);
            addRemoveListeners();
        });

        function getRandomColor() {
            const letters = '0123456789ABCDEF';
            let color = '#';
            for (let i = 0; i < 6; i++) {
                color += letters[Math.floor(Math.random() * 16)];
            }
            return color;
        }

        document.getElementById('draw-wheel').addEventListener('click', drawWheel);
        document.getElementById('spin-wheel').addEventListener('click', spinWheel);

        function drawWheel() {
            const items = Array.from(document.querySelectorAll('.wheel-item-input')).map(input => input.value.trim()).filter(Boolean);
            const colors = Array.from(document.querySelectorAll('.wheel-color-input')).map(input => input.value);
            
            if (items.length < 2) {
                alert('항목을 최소 2개 이상 입력해주세요.');
                return;
            }
            
            const wheelEl = document.getElementById('wheel');
            wheelEl.innerHTML = '';
            
            const angle = 360 / items.length;
            
            items.forEach((item, index) => {
                const itemEl = document.createElement('div');
                itemEl.className = 'wheel-item';
                itemEl.textContent = item;
                itemEl.style.backgroundColor = colors[index % colors.length];
                itemEl.style.transform = `rotate(${index * angle}deg)`;
                wheelEl.appendChild(itemEl);
            });
        }

        function spinWheel() {
            const items = Array.from(document.querySelectorAll('.wheel-item-input')).map(input => input.value.trim()).filter(Boolean);
            
            if (items.length < 2) {
                alert('먼저 돌림판을 그려주세요.');
                return;
            }
            
            const wheelEl = document.getElementById('wheel');
            const resultEl = document.getElementById('wheel-result');
            
            // 회전 각도 계산 (최소 5바퀴 이상 돌게)
            const rotations = 5 + Math.random() * 5; // 5~10바퀴
            const angle = rotations * 360;
            
            // 랜덤으로 결과 선택
            const resultIndex = Math.floor(Math.random() * items.length);
            const itemAngle = 360 / items.length;
            
            // 결과 각도 계산 (포인터가 특정 항목을 가리키도록)
            const finalAngle = angle - (resultIndex * itemAngle + itemAngle / 2);
            
            // 돌림판 회전
            wheelEl.style.transform = `rotate(${finalAngle}deg)`;
            
            // 결과 표시 (애니메이션 종료 후)
            setTimeout(() => {
                resultEl.textContent = `결과: ${items[resultIndex]}`;
            }, 4000); // 회전 애니메이션 시간과 일치
        }

        // 관리자 패널 토글 기능
        document.getElementById('adminToggle').addEventListener('click', function() {
            document.getElementById('adminMenu').classList.toggle('open');
        });

        // 캐러셀 이미지 관리 기능
        const carouselUpload = document.getElementById('carouselUpload');
        const carouselPreview = document.getElementById('carouselPreview');
        const addCarouselBtn = document.getElementById('addCarouselBtn');
        const uploadStatus = document.getElementById('uploadStatus');
        const carouselItemList = document.getElementById('carouselItemList');
        const saveCarouselBtn = document.getElementById('saveCarouselBtn');
        
        // 로컬 스토리지에서 캐러셀 이미지 불러오기
        let carouselImages = JSON.parse(localStorage.getItem('carouselImages')) || [
            {
                type: 'text',
                title: '2023학년도 초·중등 연계 AI융합교육캠프',
                desc: '9.2 ~ 8일 08:51~15:46 참조',
                detail: '폴처라 시음합교육실',
                background: 'linear-gradient(135deg, #1b4f9f, #2e86de)'
            },
            {
                type: 'text',
                title: 'KOREAN INTERNATIONAL SCHOOL',
                desc: '2024년 중고 SW융합 해커톤 캠프',
                detail: '일시: 2024년 11월 23일 토요일 08:00',
                background: 'linear-gradient(135deg, #2e86de, #00cec9)'
            },
            {
                type: 'image',
                src: '/content/홈페이지%20사진%203.png',
                title: '2025학년도 학습동 연계 사용한 교육과목',
                desc: '다양한 교육과목을 통해 창의력과 문제 해결 능력을 키웁니다'
            }
        ];
        
        // 이미지 업로드 미리보기
        if (carouselUpload) {
            carouselUpload.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (!file) return;
                
                if (!file.type.match('image.*')) {
                    uploadStatus.textContent = '이미지 파일만 업로드 가능합니다.';
                    uploadStatus.style.color = 'red';
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    carouselPreview.innerHTML = `<img src="${e.target.result}" alt="미리보기">`;
                    addCarouselBtn.disabled = false;
                    uploadStatus.textContent = '이미지를 업로드할 준비가 되었습니다.';
                    uploadStatus.style.color = 'green';
                };
                reader.readAsDataURL(file);
            });
        }
        
        // 캐러셀에 이미지 추가
        if (addCarouselBtn) {
            addCarouselBtn.addEventListener('click', function() {
                const file = carouselUpload.files[0];
                if (!file) return;
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    const newImage = {
                        type: 'image',
                        src: e.target.result,
                        title: prompt('이미지 제목을 입력하세요:', '새 이미지'),
                        desc: prompt('이미지 설명을 입력하세요:', '')
                    };
                    
                    carouselImages.push(newImage);
                    renderCarouselItems();
                    saveCarousel();
                    
                    // 폼 초기화
                    carouselUpload.value = '';
                    carouselPreview.innerHTML = '<div class="text-center text-muted"><i class="bi bi-image" style="font-size: 48px;"></i><p>이미지 미리보기</p></div>';
                    addCarouselBtn.disabled = true;
                    uploadStatus.textContent = '이미지가 성공적으로 추가되었습니다.';
                };
                reader.readAsDataURL(file);
            });
        }
        
        // 캐러셀 아이템 렌더링
        function renderCarouselItems() {
            if (!carouselItemList) return;
            
            carouselItemList.innerHTML = '';
            carouselImages.forEach((item, index) => {
                const thumb = document.createElement('div');
                thumb.className = 'carousel-thumb';
                thumb.dataset.index = index;
                
                if (item.type === 'image') {
                    thumb.innerHTML = `
                        <img src="${item.src}" alt="썸네일">
                        <div class="remove-btn" data-index="${index}">&times;</div>
                    `;
                } else {
                    thumb.innerHTML = `
                        <div style="width:100%;height:100%;background:${item.background};display:flex;align-items:center;justify-content:center;color:white;">
                            <i class="bi bi-textarea-t"></i>
                        </div>
                        <div class="remove-btn" data-index="${index}">&times;</div>
                    `;
                }
                
                carouselItemList.appendChild(thumb);
            });
            
            // 삭제 버튼 이벤트 추가
            document.querySelectorAll('.remove-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const index = parseInt(this.dataset.index);
                    if (confirm('정말 이 항목을 삭제하시겠습니까?')) {
                        carouselImages.splice(index, 1);
                        renderCarouselItems();
                    }
                });
            });
            
            // 항목 클릭 시 편집 기능 (선택사항)
            document.querySelectorAll('.carousel-thumb').forEach(thumb => {
                thumb.addEventListener('click', function() {
                    const index = parseInt(this.dataset.index);
                    const item = carouselImages[index];
                    
                    if (item.type === 'text') {
                        const newTitle = prompt('제목을 수정하세요:', item.title);
                        if (newTitle !== null) item.title = newTitle;
                        
                        const newDesc = prompt('설명을 수정하세요:', item.desc);
                        if (newDesc !== null) item.desc = newDesc;
                        
                        renderCarouselItems();
                    } else {
                        const newTitle = prompt('제목을 수정하세요:', item.title);
                        if (newTitle !== null) item.title = newTitle;
                        
                        const newDesc = prompt('설명을 수정하세요:', item.desc);
                        if (newDesc !== null) item.desc = newDesc;
                        
                        renderCarouselItems();
                    }
                });
            });
        }
        
        // 변경사항 저장
        if (saveCarouselBtn) {
            saveCarouselBtn.addEventListener('click', function() {
                saveCarousel();
                renderCarousel(); // 캐러셀 다시 렌더링
                alert('변경사항이 저장되었습니다.');
            });
        }
        
        // 로컬 스토리지에 저장
        function saveCarousel() {
            localStorage.setItem('carouselImages', JSON.stringify(carouselImages));
        }
        
        // 캐러셀 렌더링 함수
        function renderCarousel() {
            const slides = document.querySelector('.slides');
            const dotsContainer = document.getElementById('slider-dots');
            
            if (!slides) return;
            
            slides.innerHTML = '';
            if (dotsContainer) dotsContainer.innerHTML = '';
            
            carouselImages.forEach((item, index) => {
                if (item.type === 'text') {
                    const slide = document.createElement('div');
                    slide.className = 'slide';
                    slide.innerHTML = `
                        <div class="text-slide" style="background: ${item.background}">
                            <div class="text-slide-content">
                                <h3 class="text-slide-title">${item.title}</h3>
                                <p class="text-slide-desc">${item.desc}</p>
                                <p class="text-slide-detail">${item.detail || ''}</p>
                            </div>
                        </div>
                    `;
                    slides.appendChild(slide);
                } else {
                    const slide = document.createElement('div');
                    slide.className = 'slide';
                    slide.innerHTML = `
                        <img src="${item.src}" alt="${item.title}" onerror="handleImageError(this)">
                        <div class="slide-content">
                            <h3 class="slide-title">${item.title}</h3>
                            <p class="slide-desc">${item.desc}</p>
                        </div>
                    `;
                    slides.appendChild(slide);
                }
                
                // Dot 생성
                if (dotsContainer) {
                    const dot = document.createElement('span');
                    dot.classList.add('dot');
                    if (index === 0) dot.classList.add('active');
                    dot.addEventListener('click', () => moveToSlide(index));
                    dotsContainer.appendChild(dot);
                }
            });
            
            // 슬라이더 상태 초기화
            currentIndex = 0;
            updateSlide();
        }
        
        // 페이지 로드 시 초기화
        document.addEventListener('DOMContentLoaded', function() {
            // 모든 이미지에 error 이벤트 리스너 추가
            const images = document.querySelectorAll('img');
            images.forEach(img => {
                // 이미 로드 실패한 이미지 처리
                if (!img.complete || img.naturalHeight === 0) {
                    handleImageError(img);
                }
                
                // 앞으로 로드 실패할 이미지를 위해 이벤트 리스너 추가
                img.addEventListener('error', function() {
                    handleImageError(this);
                });
            });
            
            // 캐러셀 렌더링
            renderCarouselItems();
            renderCarousel();
            
            // 모바일에서 메뉴 토글 기능
            if (window.innerWidth <= 768) {
                document.getElementById('menuToggle').addEventListener('click', function() {
                    const navMenu = document.querySelector('.nav-menu');
                    if (navMenu.style.display === 'flex') {
                        navMenu.style.display = 'none';
                    } else {
                        navMenu.style.display = 'flex';
                    }
                });
            }
            
            // 초기 화면에서 기본 돌림판 그리기
            if (document.getElementById('wheel-game')) {
                setTimeout(drawWheel, 100);
            }
        });
    </script>
</body>
</html>
